# secrets.yaml.template
# Copy to secrets.yaml and fill in actual values
# DO NOT commit secrets.yaml to version control!
#
# To create from template:
# 1. Copy: cp secrets.yaml.template secrets.yaml
# 2. Fill in actual base64-encoded values
# 3. Apply: kubectl apply -f secrets.yaml
#
# To encode a value: echo -n "your-value" | base64

apiVersion: v1
kind: Secret
metadata:
  name: sap-llm-secrets
  namespace: sap-llm
  labels:
    app: sap-llm-api
type: Opaque
data:
  # Cosmos DB credentials (base64 encoded)
  # Example: echo -n "https://your-cosmos.documents.azure.com:443/" | base64
  cosmos-endpoint: "REPLACE_WITH_BASE64_ENCODED_ENDPOINT"
  cosmos-key: "REPLACE_WITH_BASE64_ENCODED_KEY"

  # Redis password (base64 encoded)
  # Example: echo -n "your-redis-password" | base64
  redis-password: "REPLACE_WITH_BASE64_ENCODED_PASSWORD"

  # MongoDB credentials (base64 encoded)
  mongo-username: "REPLACE_WITH_BASE64_ENCODED_USERNAME"
  mongo-password: "REPLACE_WITH_BASE64_ENCODED_PASSWORD"

  # SAP Service Bus (base64 encoded)
  servicebus-connection-string: "REPLACE_WITH_BASE64_ENCODED_CONNECTION_STRING"

  # API Keys (base64 encoded)
  api-key-admin: "REPLACE_WITH_BASE64_ENCODED_ADMIN_KEY"
  api-key-user: "REPLACE_WITH_BASE64_ENCODED_USER_KEY"

  # APOP Signing Key (base64 encoded)
  apop-private-key: "REPLACE_WITH_BASE64_ENCODED_PRIVATE_KEY"
  apop-public-key: "REPLACE_WITH_BASE64_ENCODED_PUBLIC_KEY"

---
# Example script to create secrets from environment variables:
# kubectl create secret generic sap-llm-secrets \
#   --from-literal=cosmos-endpoint=$COSMOS_ENDPOINT \
#   --from-literal=cosmos-key=$COSMOS_KEY \
#   --from-literal=redis-password=$REDIS_PASSWORD \
#   --from-literal=mongo-username=$MONGO_USERNAME \
#   --from-literal=mongo-password=$MONGO_PASSWORD \
#   --from-literal=servicebus-connection-string=$SERVICEBUS_CONNECTION_STRING \
#   --from-literal=api-key-admin=$API_KEY_ADMIN \
#   --from-literal=api-key-user=$API_KEY_USER \
#   --from-literal=apop-private-key=$APOP_PRIVATE_KEY \
#   --from-literal=apop-public-key=$APOP_PUBLIC_KEY \
#   --namespace=sap-llm
