    },
    "account_type": {
      "sap_field": "AccountType",
      "data_type": "string",
      "required": false,
      "max_length": 1,
      "transformations": ["uppercase", "trim"],
      "validation": "^[DK]$",
      "default": "K",
      "description": "Account Type (D=Customer, K=Vendor)"
    }
  }
