    },
    "cash_discount_2_percent": {
      "sap_field": "CashDiscount2Percent",
      "data_type": "decimal",
      "required": false,
      "transformations": ["parse_amount", "format_decimal:3"],
      "validation": null,
      "default": null,
      "description": "Cash Discount 2 Percentage"
    },
    "net_payment_days": {
      "sap_field": "NetPaymentDays",
      "data_type": "integer",
      "required": false,
      "transformations": ["parse_integer"],
      "validation": null,
      "default": null,
      "description": "Net Payment Days"
    },
    "due_date_days": {
      "sap_field": "NetPaymentDays",
      "data_type": "integer",
      "required": false,
      "transformations": ["parse_integer"],
      "validation": null,
      "default": null,
