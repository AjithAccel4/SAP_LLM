{
  "document_type": "PurchaseOrder",
  "subtype": "Subcontracting",
  "api_version": "A_PurchaseOrder",
  "description": "Subcontracting Purchase Order mapping for SAP S/4HANA OData API",
  "config": {
    "copy_unmapped": false,
    "strict_validation": true,
    "allow_partial": false
  },
  "mappings": {
    "po_number": {
      "sap_field": "PurchaseOrder",
      "data_type": "string",
      "required": true,
      "max_length": 10,
      "transformations": ["uppercase", "trim"],
      "validation": "^[A-Z0-9]{1,10}$",
      "default": null,
      "description": "Purchase Order Number"
    },
    "po_date": {
      "sap_field": "PurchaseOrderDate",
      "data_type": "date",
      "required": true,
      "transformations": ["parse_date", "format_date:YYYYMMDD"],
      "validation": null,
      "default": null,
      "description": "Purchase Order Date"
    },
    "vendor_id": {
      "sap_field": "Supplier",
      "data_type": "string",
      "required": true,
      "max_length": 10,
      "transformations": ["uppercase", "trim", "pad_left:10:0"],
      "validation": "^[A-Z0-9]{1,10}$",
      "default": null,
      "description": "Subcontractor/Supplier ID"
    },
    "company_code": {
      "sap_field": "CompanyCode",
      "data_type": "string",
      "required": true,
      "max_length": 4,
      "transformations": ["uppercase", "pad_left:4:0"],
      "validation": "^[A-Z0-9]{1,4}$",
      "default": null,
      "description": "Company Code"
    },
    "purchasing_organization": {
      "sap_field": "PurchasingOrganization",
      "data_type": "string",
      "required": true,
      "max_length": 4,
      "transformations": ["uppercase", "pad_left:4:0"],
      "validation": "^[A-Z0-9]{1,4}$",
      "default": null,
      "description": "Purchasing Organization"
    },
    "purchasing_group": {
      "sap_field": "PurchasingGroup",
      "data_type": "string",
      "required": true,
      "max_length": 3,
      "transformations": ["uppercase", "pad_left:3:0"],
      "validation": "^[A-Z0-9]{1,3}$",
      "default": null,
      "description": "Purchasing Group"
    },
    "po_type": {
      "sap_field": "PurchaseOrderType",
      "data_type": "string",
      "required": false,
      "max_length": 4,
      "transformations": ["uppercase", "trim"],
      "validation": "^[A-Z]{2,4}$",
      "default": "NB",
      "description": "Purchase Order Type"
    },
    "currency": {
      "sap_field": "DocumentCurrency",
      "data_type": "string",
      "required": true,
      "max_length": 3,
      "transformations": ["uppercase", "validate_iso_currency"],
      "validation": "^[A-Z]{3}$",
      "default": "USD",
      "description": "Currency Code (ISO 4217)"
    },
    "special_stock_indicator": {
      "sap_field": "InventorySpecialStockType",
      "data_type": "string",
      "required": false,
      "max_length": 1,
      "transformations": ["uppercase", "trim"],
      "validation": "^[OW]$",
      "default": "O",
      "description": "Special Stock Indicator for Subcontracting"
    }
  },
  "nested_mappings": {
    "items": {
      "sap_collection": "to_PurchaseOrderItem",
      "mappings": {
        "item_number": {
          "sap_field": "PurchaseOrderItem",
          "data_type": "string",
          "required": true,
          "max_length": 5,
          "transformations": ["pad_left:5:0"],
          "validation": null,
          "default": null,
          "description": "PO Item Number"
        },
        "material_number": {
          "sap_field": "Material",
          "data_type": "string",
          "required": true,
          "max_length": 40,
          "transformations": ["uppercase", "trim"],
          "validation": null,
          "default": null,
          "description": "Material Number"
        },
        "quantity": {
          "sap_field": "OrderQuantity",
          "data_type": "decimal",
          "required": true,
          "transformations": ["parse_amount", "format_decimal:3"],
          "validation": null,
          "default": null,
          "description": "Order Quantity"
        },
        "unit_price": {
          "sap_field": "NetPriceAmount",
          "data_type": "decimal",
          "required": false,
          "transformations": ["parse_amount", "format_decimal:2"],
          "validation": null,
          "default": null,
          "description": "Unit Price"
        }
      }
    },
    "components": {
      "sap_collection": "to_SubcontractingComponent",
      "mappings": {
        "component_material": {
          "sap_field": "Material",
          "data_type": "string",
          "required": true,
          "max_length": 40,
          "transformations": ["uppercase", "trim"],
          "validation": null,
          "default": null,
          "description": "Component Material"
        },
        "component_quantity": {
          "sap_field": "RequiredQuantity",
          "data_type": "decimal",
          "required": true,
          "transformations": ["parse_amount", "format_decimal:3"],
          "validation": null,
          "default": null,
          "description": "Component Required Quantity"
        }
      }
    }
  }
}
